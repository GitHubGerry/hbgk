    <struts>
        <package name="default" namespace="/" extends="struts-default">
        <!-- name action的名字，class：实现类 -->
        
        
        <action name="helloworldaction" class="helloworldaction.HelloWorldAction">
            
            <!-- 结果集，即action中SUCCESS返回的视图 -->

            <result name="success">
            	/login.jsp
            </result>
            <result name="error">
            	/HelloStruts2.jsp
            </result>
        </action>
        
        <!--                        我开始啦                                                              -->
        <action name="HelloMain" class="myaction.LoginAction" method="login">
            <result name="success" >
            	/home.jsp
            </result>
            <result name="error" >
            	/login.jsp
            </result>
        </action>
        
        <!--使用通配符* 和 {1}的方式 ,{1}不起作用-->
        <action name="getStorehouse" class="myaction.StorehouseAction" method="get">
            <result>
